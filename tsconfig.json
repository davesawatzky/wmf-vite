		"module": "es6",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"baseUrl": ".",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["es6", "dom"],
		// "paths": {
		// 	"@/*": ["src/*"]
		// }
		// "types": ["vite-plugin-pages/client", "vite-plugin-vue-layouts/client"]
	},
	"include": ["env.d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"exclude": ["node_modules"]
}
